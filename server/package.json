{
  "name": "docflow-server",
  "version": "1.0.0",
  "type": "module",
  "description": "DocFlow backend server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --es-module-specifier-resolution=node dist/index.js",
