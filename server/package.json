    "passport-local": "^1.0.0",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.11",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^20.19.0",
    "@types/nodemailer": "^7.0.1",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "typescript": "^5.3.3",
    "tsx": "^4.19.1"
